<% if session[:current_position].present? %>
	<%= session[:current_position].to_s %>
<% end %>

<div id="googleMap"></div>

<button id="drop">What's happening?</button>

<%= form_for :address do |f| %>
	<p>
		<%= f.label :current_address %><br>
		<%= f.text_field :current_address %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

